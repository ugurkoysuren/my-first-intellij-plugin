<idea-plugin>
    <id>com.github.ugurkoysuren.myfirstintellijplugin</id>
    <name>my-first-intellijp</name>
    <vendor>ugurkoysuren</vendor>

    <description> <![CDATA[
                This is an example test plugin generated by ugurkoysuren ]]> </description>
    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">

        <toolWindow id="Sample Calendar" secondary="true" icon="AllIcons.General.Modified" anchor="right"
                    factoryClass="com.github.ugurkoysuren.myfirstintellijplugin.listeners.MyToolWindowFactory"/>
    </extensions>

    <actions>
        <action
                id="StackOverflow.AskQuestion.ToolsMenu"
                class="com.github.ugurkoysuren.myfirstintellijplugin.listeners.AskQuestionAction"
                text="Ask Question on Stack Overflow"
                description="Ask a Question on Stack Overflow">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
        <action
                id="StackOverflow.Search.Editor"
                class="com.github.ugurkoysuren.myfirstintellijplugin.listeners.SearchAction"
                text="Search on Stack Overflow"
                description="Search on Stack Overflow">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>
        <action
                id="StackOverflow.Search.Console"
                class="com.github.ugurkoysuren.myfirstintellijplugin.listeners.SearchAction"
                text="Search on Stack Overflow"
                description="Search on Stack Overflow">
            <add-to-group group-id="ConsoleEditorPopupMenu" anchor="last"/>
        </action>

    </actions>


</idea-plugin>
